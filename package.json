{
  "name": "deli-app",
  "description": "A simple PHP MVC framework with routing, templating, and database integration.",
  "scripts": {
    "build": "npm run tailwindcss-build",
    "dev": "npm run tailwindcss-dev",
    "tailwindcss-build": "npx @tailwindcss/cli -i ./resources/css/main.css -o ./public/css/generated-styles.css --minify",
    "tailwindcss-dev": "npx @tailwindcss/cli -i ./resources/css/main.css -o ./public/css/generated-styles.css --watch"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "tailwindcss": "^4.1.13"
  }
}
